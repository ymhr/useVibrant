{
	"name": "use-vibrant-hook",
	"version": "1.0.1",
	"description": "A react hooks binding for the node-vibrant library",
	"keywords": ["vibrant", "react", "hooks", "react hooks", "color", "auto color"],
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"files": ["lib/**/*"],
	"scripts": {
		"test": "jest --config jestconfig.json",
		"build": "tsc",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"lint": "eslint --ext \"src/**/*.ts\"",
		"prepare": "npm run build",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint",
		"version": "npm run format && git add -A src",
		"postversion": "git push && git push --tags"
	},
	"author": "James Martin",
	"license": "ISC",
	"repository": "https://github.com/ymhr/useVibrant",
	"peerDependencies": {
		"react": "^16.8.6"
	},
	"dependencies": {
		"node-vibrant": "^3.1.3"
	},
	"devDependencies": {
		"@types/react": "^16.8.21",
		"@typescript-eslint/eslint-plugin": "^1.10.2",
		"@typescript-eslint/parser": "^1.10.2",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^5.0.0",
		"prettier": "^1.18.2",
		"typescript": "^3.5.2"
	}
}
